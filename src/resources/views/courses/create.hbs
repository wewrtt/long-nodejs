        <div class="form-group">
            <label for="descripsion">Tên khóa học</label>
            <input type="text" name="name"class="form-control" id="name" placeholder="Nhập từ khóa....">
        </div>
         <div class="form-group">
            <label for="description">Mô tả khóa học</label>
            <input type="text" name="description"class="form-control" id="description" placeholder="Nhập từ khóa....">
        </div>
         <div class="form-group">
            <label for="descripsion">VideoID</label>
            <input type="text" name="videoId"class="form-control" id="videoId" placeholder="Nhập từ khóa....">
        </div>
         <div class="form-group">
            <label for="descripsion">Hình ảnh</label>
            <input type="text" name="image"class="form-control" id="image" placeholder="Nhập từ khóa....">
        </div>
        <button type="submit" class="btn btn-primary">Thêm khóa học</button>
    </form>
</div>